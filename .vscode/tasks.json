{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ionic serve",
            "type": "shell",
            "command": "ionic",
            "args": ["serve", "--no-open"],
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Reset Android Emulator App Data",
            "type": "shell",
            "command": "adb",
            "args": ["shell", "pm", "clear", "com.basketbot.app"],
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "npm run build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc", "$eslint-stylish"]
        }
    ]
}
